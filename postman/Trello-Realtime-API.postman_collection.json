  },
  "item": [
    {
      "name": "Trello APIs",
      "item": [
        {
          "name": "Get Boards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trello/boards",
              "host": ["{{base_url}}"],
              "path": ["api", "trello", "boards"]
            },
            "description": "Retrieves all boards accessible by the authenticated Trello user"
          },
          "response": []
        },
        {
          "name": "Get Board Lists",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trello/boards/:boardId/lists",
              "host": ["{{base_url}}"],
              "path": ["api", "trello", "boards", ":boardId", "lists"],
              "variable": [
                {
                  "key": "boardId",
                  "value": "",
                  "description": "Trello Board ID"
                }
              ]
            },
            "description": "Retrieves all lists in a specific board"
          },
          "response": []
        },
        {
          "name": "Get Cards",
          "request": {
            "method": "GET",
