            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"listId\": \"your_list_id\",\n  \"name\": \"New Card from Postman\",\n  \"description\": \"This card was created using the API\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trello/cards",
              "host": ["{{base_url}}"],
              "path": ["api", "trello", "cards"]
            },
            "description": "Creates a new card in a specific list"
          },
          "response": []
        },
        {
          "name": "Update Card",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Card Name\",\n  \"desc\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trello/cards/:cardId",
              "host": ["{{base_url}}"],
              "path": ["api", "trello", "cards", ":cardId"],
              "variable": [
                {
                  "key": "cardId",
                  "value": "",
                  "description": "Trello Card ID"
                }
              ]
            },
            "description": "Updates an existing card"
          },
          "response": []
        }
